mixin articlesCard(data_att, title, subtitle, path, href)
  .articles__card(data-cat=data_att)
    .articles__card-title= title
    .articles__card-subtitle= subtitle
    picture.articles__card-img
      img(srcset=path)
    a(href=href).articles__card-link Узнать подробнее >

.articles
  .articles__wrap.container
    h2.articles__title Профильные статьи и видео
    .articles__buttons
      button(data-cat="all_directions").articles__button Все направления
      button(data-cat="labour_protection").articles__button Охрана труда
      button(data-cat="education").articles__button Образование
      button(data-cat="all").articles__button Смотреть все
        .articles__button-counter 13

